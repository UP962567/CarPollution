<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_bg"
    >

    <TextView
        android:id="@+id/pageSettingsLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:text="Settings Page"
        android:textColor="@color/white"
        android:textSize="40dp"


        />

    <LinearLayout
        android:layout_width="224dp"
        android:layout_height="721dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="130dp"
        android:orientation="vertical">



        <EditText
            android:id="@+id/emailSettingLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint=""
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/white"

            />

        <EditText
            android:id="@+id/numberSettingLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint=""
            android:inputType="phone"
            android:text=""
            android:textColor="@color/white"


            />

        <EditText
            android:id="@+id/usernameSettingLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"


            android:hint=""
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/passwordSettingLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint=""
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/white"

            />

        <EditText
            android:id="@+id/RepasswordSettingLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint=""
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/white"

            />

        <EditText
            android:id="@+id/fullNameSettingLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint=""
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/white"

            />

        <EditText
            android:id="@+id/countrySettingLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint=""
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/white"

            />

        <Button
            android:id="@+id/updateButtonSettings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:background="@color/black"
            android:text="Update"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="25dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="224dp"
        android:layout_height="721dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="170dp"
        android:layout_marginTop="130dp"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint=""
            android:inputType="textPersonName"
            android:text="Your Email: "
            android:textColor="@color/white"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint=""
            android:inputType="phone"
            android:text="Your Number: "
            android:textColor="@color/white"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"


            android:hint=""
            android:inputType="textPersonName"
            android:text="YourUsername: "
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint=""
            android:inputType="textPersonName"
            android:text="Your Password: "
            android:textColor="@color/white"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint=""
            android:inputType="textPersonName"
            android:text="Your RePassword: "
            android:textColor="@color/white"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint=""
            android:inputType="textPersonName"
            android:text="Your Fullname:"
            android:textColor="@color/white"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint=""
            android:inputType="textPersonName"
            android:text="Your Country: "
            android:textColor="@color/white"

            />



    </LinearLayout>

</RelativeLayout>